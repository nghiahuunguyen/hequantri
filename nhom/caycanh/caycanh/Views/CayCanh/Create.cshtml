@model caycanh.Models.CayCanh
@using caycanh.Models
@{
    ViewBag.Title = "Thêm Mới Cây";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Mới Cây</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.MaCay, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.MaCay, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MaCay, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenCay, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.TenCay, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenCay, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GiaTien, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaLoaiCay, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.MaLoaiCay, new SelectList((List<LoaiCay>)ViewBag.LoaiCayList, "MaLoaiCay", "TenLoaiCay"), "Chọn loại cây", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MaLoaiCay, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NgayTrong, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.NgayTrong, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NgayTrong, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Tạo mới" class="btn btn-primary custom-button" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
    </div>
    
}