@model caycanh.Models.DonDatHang
@using caycanh.Models

<h2>Chỉnh sửa chi tiết</h2>

@using (Html.BeginForm("Edit", "DonHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.MaDonDatHang, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.MaDonDatHang, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MaDonDatHang, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaKhachHang, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.MaKhachHang, new SelectList((List<caycanh.Models.KhachHang>)ViewBag.KhachHangList, "MaKhachHang", "TenKhachHang"), "Chọn Khách Hàng", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MaKhachHang, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.MaNhanVien, new SelectList((List<caycanh.Models.NhanVien>)ViewBag.NhanVienList, "MaNhanVien", "TenNhanVien"), "Chọn Nhân Viên", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NgayDatHang, "Ngày Đặt Hàng")
        @Html.TextBoxFor(model => model.NgayDatHang, new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(model => model.NgayDatHang)
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>
}
