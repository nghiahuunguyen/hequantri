@model List<caycanh.Models.LoaiCay>
@{
    ViewBag.Title = "Loại Cây";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Danh sách Loại Cây</h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm mới
    </a>
</p>

<table class="table">
    <tr>
        <th>Mã Loại Cây</th>
        <th>Tên Loại Cây</th>
        <th></th>
    </tr>

    @foreach (var loaiCay in Model)
    {
        <tr>
            <td>@loaiCay.MaLoaiCay</td>
            <td>@loaiCay.TenLoaiCay</td>
            <td>
                <a href="@Url.Action("Details", new { id = loaiCay.MaLoaiCay })" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i> Chi tiết
                </a>
                <a href="@Url.Action("Edit", new { id = loaiCay.MaLoaiCay })" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a href="@Url.Action("Delete", new { id = loaiCay.MaLoaiCay })" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Xóa
                </a>
            </td>
        </tr>
    }
</table>