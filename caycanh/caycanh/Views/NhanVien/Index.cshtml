@model List<caycanh.Models.NhanVien>
@{
    ViewBag.Title = "Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Danh sách Nhân Viên</h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm mới
    </a>
</p>

<table class="table">
    <tr>
        <th>Mã Nhân Viên</th>
        <th>Tên Nhân Viên</th>
        <th>Chức Vụ</th>
        <th>Lương</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaNhanVien</td>
            <td>@item.TenNhanVien</td>
            <td>@item.ChucVu</td>
            <td>@item.Luong</td>
            <td>
                <a href="@Url.Action("Details", new { id = item.MaNhanVien })" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i> Chi tiết
                </a>
                <a href="@Url.Action("Edit", new { id = item.MaNhanVien })" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a href="@Url.Action("Delete", new { id = item.MaNhanVien })" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Xóa
                </a>
            </td>
        </tr>
    }
</table>