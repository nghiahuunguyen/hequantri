@model List<caycanh.Models.CayCanh>
@{
    ViewBag.Title = "Cây Cảnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Cây </h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm mới
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã Cây</th>
            <th>Tên Cây</th>
            <th>Giá Tiền</th>
            <th>Mã loại cây</th>
            <th>Ngày Trồng</th>
            <th>Số Lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaCay</td>
                <td>@item.TenCay</td>
                <td>@item.GiaTien</td>
                <td>@item.MaLoaiCay</td>
                <td>@item.NgayTrong</td>
                <td>@item.SoLuong</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.MaCay })" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Chi tiết
                    </a>
                    <a href="@Url.Action("Edit", new { id = item.MaCay })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.MaCay })" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-primary {
        background-color: #007bff; /* Replace with your desired color */
        border-color: #007bff; /* Replace with your desired color */
    }

    .btn-info {
        background-color: #17a2b8; /* Replace with your desired color */
        border-color: #17a2b8; /* Replace with your desired color */
    }

    .btn-warning {
        background-color: #ffc107; /* Replace with your desired color */
        border-color: #ffc107; /* Replace with your desired color */
    }

    .btn-danger {
        background-color: #dc3545; /* Replace with your desired color */
        border-color: #dc3545; /* Replace with your desired color */
    }
</style>